# Docker Compose Environment Variables Example
# Copy this file to .env in the root directory for docker-compose

# Database Configuration
POSTGRES_DB=atari_files_transfer
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Server Environment
FLASK_ENV=production
JWT_SECRET_KEY=your-super-secure-jwt-secret-key

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-2
TRANSFER_SERVER_ID=your_transfer_server_id
IAM_ROLE_ARN=arn:aws:iam::account:role/your_role
S3_BUCKET_NAME=your_s3_bucket

# Port Configuration
SERVER_PORT=5050
CLIENT_PORT=3000